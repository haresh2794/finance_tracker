

<% if @stock %>
  <div class="card card-header result-block">
    <strong>Symbol: </strong> <%= @stock.ticker %> 
    <strong>Company: </strong> <%= @stock.name %> 
    <strong>Stock Price: </strong> <%= @stock.last_price %>
  
    <% if current_user.can_track_stock?(@stock.ticker) %>
      <%= link_to 'Add', user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-xs btn-success add-button", method: :post %>  
    <% else %>
      <span class="badge badge-secondary">
        You are already tracking 
        <% if !current_user.under_stock_limit? %>
          10 stocks
        <% end %>
        <% if current_user.stock_already_tracked?(@stock.ticker) %>
          this stock
        <%end%>
      </span>
    <%end%>
  </div>
<%end%>

<div class="result-block">
<%= render 'layouts/messages' %>
</div>

    
<div class="result-block">
<%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header result-block">
  <table class=" table col-md-12">
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
    <td><strong>Name: </strong> <%= friend.full_name %></td>
    <td><strong>Email: </strong><%= friend.email %></td>
    <td><%= link_to "View Profile", '#', class: "btn btn-xs btn-success"  %>
    <% if current_user.not_friends_with?(friend.id) %>
      <%= link_to 'Follow', friendships_path(friend: friend), class: "btn btn-xs btn-success add-button", method: :post %></td> 
    <%else%>
      <span class="badge badge-secondary">
        You are friends
      </span>
    <%end%>
    </tr>
  <%end%>
  </tbody>
  </div>
<%end%>

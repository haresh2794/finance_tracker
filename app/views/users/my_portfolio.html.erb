<h1>My Portfolio</h1>
<div class="search-title">
<h3>Search Stocks</h3>
<%= form_tag search_stock_path, remote: true, method: :get do %> <!-- remote will convert to ajax-->
  <div class="form-group row no-right-padding">
    <div class="col-sm-9">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock symbol", autofocus: true, class: "form-control form-control-lg" %>
    </div>

    <div class="col-sm-3 no-left-padding">
    <%= button_tag type: :submit, class:"btn btn-success" do %>
      <%= fa_icon "search 2x" %>
      <%end%>
    </div>
    <%end%>
</div>
<div id="results"> 

</div>

<%= render 'stocks/list' %>
